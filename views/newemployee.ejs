<title>Workforce Schedule</title>
</head>

<body>	

	<div id="mySidenav" class="sidenav">
		<span class="sidetext">
			<form method ="get" action="/logout">
				<input type="submit" value ="Logout">
			</form>
			<br>
			<form method ="get" action="/">
				<input type="submit" value ="Home">
			</form>
		</span>
	</div>	
	<div id="main" class="main">
		
				<H1>Workforce Schedule</h1>
	
		<div id="content" class="content">
		
			<hr><hr>
	
			<%- data.newcreated %>
	
			<form method = "post" action="/createemployee">
				First Name:<input type="text" name="name_first"><br>
				Last Name:<input type="text" name="name_last"><br>
				Username:<input type="text" name="username"><br>
				Password:<input type="text" name="pswd"><br>
